<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Настройки подключения к БД -->
        <property name="connection.driver_class">
            com.mysql.jdbc.Driver
        </property>

        <property name="connection.url">jdbc:mysql://localhost:3306/db_example?serverTimezone=UTC</property>

        <property name="connection.username">root</property>
        <property name="connection.password">10293847</property>
        <property name="connection.pool_size">1</property>

        <!-- SQL диалект -->
        <property name="dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <!-- Включить автоматическое управление контекстом сессии -->
        <property name="current_session_context_class">thread</property>

        <!-- Вывод в консоль SQL-запросов -->
        <property name="show_sql">true</property>

        <!-- Подключение объектов сущностей -->
        <mapping package="model"/>
        <mapping class="model.User"/>

    </session-factory>

</hibernate-configuration>